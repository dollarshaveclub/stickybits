{
  "name": "stickybits",
  "version": "2.0.0",
  "description": "Stickybits is a lightweight alternative to `position: sticky` polyfills",
  "main": "dist/stickybits.js",
  "scripts": {
    "build": "npm run rollup && gulp minify",
    "lint": "eslint . --fix",
    "rollup": "npm run rollup:jquery && npm run rollup:umd && npm run rollup:es",
    "rollup:jquery": "npm run transpile && rollup ./tmp/jquery.stickybits.js --o ./dist/stickbits.js --f umd",
    "rollup:umd": "npm run transpile && rollup ./tmp/stickybits.js --o ./dist/jquery.stickybits.js --f umd",
    "rollup:es": "npm run transpile && rollup ./tmp/stickybits.js --o ./dist/stickybits.es.js --f es",
    "postpublish": "git tag $npm_package_version && git push origin --tags",
    "test:unit": "jest",
    "test:acceptance": "node-qunit-phantomjs ./tests/acceptance/index.html",
    "test": "npm run test:unit && npm run test:acceptance",
    "transpile": "babel src -d tmp"
  },
  "jest": {
    "testRegex": "./tests/unit/.*.js$"
  },
  "bugs": {
    "url": "https://github.com/dollarshaveclub/stickybits/issues"
  },
  "homepage": "https://github.com/dollarshaveclub/stickybits#readme",
  "repository": {
    "url": "https://github.com/dollarshaveclub/stickybits.git",
    "type": "git"
  },
  "author": "Jeff Wainwright <jjwainwright2@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.18.0",
    "babel-minify": "^0.2.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-minify": "^0.2.0",
    "bower": "^1.8.0",
    "debug": "^3.0.0",
    "eslint": "^4.1.0",
    "eslint-config-airbnb": "^15.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "gulp": "^3.9.1",
    "jest": "^21.0.1",
    "node-qunit-phantomjs": "^1.5.0",
    "qunit": "^1.0.0",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^2.0.0"
  },
  "keywords": [
    "stick",
    "fixed",
    "sticky",
    "position",
    "navigation",
    "nav",
    "dom",
    "simple",
    "javascript",
    "stuck",
    "waypoint",
    "scroll",
    "stickyheader",
    "stickynavigation",
    "fixedheader"
  ]
}
